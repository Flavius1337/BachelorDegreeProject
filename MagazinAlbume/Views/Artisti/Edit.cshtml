@model Artist

@{
    ViewData["Title"] = "Update artist";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Edidati datele despre artistul: @Model.NumeArtist</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center" style="margin-bottom: 10px">
                        <img id="ProfilePicturePreview"  class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group" style="margin-bottom: 10px">
                        <label asp-for="ProfilePictureURL" class="control-label"></label>
                        <input asp-for="ProfilePictureURL" class="form-control" />
                        <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin-bottom: 10px" >
                        <label asp-for="NumeArtist" class="control-label"></label>
                        <input asp-for="NumeArtist" class="form-control" />
                        <span asp-validation-for="NumeArtist" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin-bottom: 20px;">
                        <label asp-for="Biografie" class="control-label"></label>
                        <textarea asp-for="Biografie" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Biografie" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-right" style="margin-right: 5px">
                        <a class="btn btn-outline-secondary" asp-action="Index">Arata toti artistii</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>

        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })

        $("#ProfilePictureURL").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}