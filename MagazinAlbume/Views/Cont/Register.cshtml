@using MagazinAlbume.Data.ViewModels;
@model RegisterVM;

@{
    ViewData["Title"] = "Creare cont";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Creaza un cont nou:</h4>
        </p>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Aceasta adresa de mail este deja folosita! Incearca din nou!</b> </span>
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group" style="margin-bottom:10px">
                        <label asp-for="NumeUtilizator" class="control-label"></label>
                        <input asp-for="NumeUtilizator" class="form-control" />
                        <span asp-validation-for="NumeUtilizator" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin-bottom:10px">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin-bottom:10px">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin-bottom:20px">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input class="btn btn-outline-success float-right" type="submit" value="Sign up" style="margin-right:5px">
                        <a class="btn btn-outline-secondary" asp-controller="Albume" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>