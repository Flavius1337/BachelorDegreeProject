<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MagazinAlbume</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MagazinAlbume.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    
    <header>
        <nav class="navbar sticky-top navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3 ">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="https://img3.stockfresh.com/files/b/butenkow/m/97/7010278_stock-vector-vector-logo-music.jpg" width="70" height="70" class="d-inline-block align-top" />
                <a class="navbar-brand" asp-controller="Albume" asp-action="Index">MusicHub</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <ul class="navbar-nav flex-grow-1">
                    <li class="navbar-nav flex-grow-1">
                        <a class="nav-link text-white" asp-controller="Albume" asp-action="Index"><i class="bi bi-music-note-beamed"></i> Home</a></>

               @if(User.Identity.IsAuthenticated && User.IsInRole("Admin")){

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-gear-fill">Managment</i>
                          
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Artisti" asp-action="Index"><i class="bi bi-headset"></i> Artisti</a></li>
                            <li><a class="dropdown-item" asp-controller="Producatori" asp-action="Index"><i class="bi bi-person-square"></i> Producatori</a></li>
                        </ul>
                    </li>
                        }
                    </li>
                </ul>


                    <form class="form-inline my-2 my-lg-0" asp-controller="Albume" asp-action="Filter" style="padding-right: 25px;">
                        <div class="input-group">
                            <input name="searchString" type="text" class="form-control" placeholder="Cauta un album..." aria-label="Search">
                            <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
                        </div>
                    </form>


                    <ul class="navbar-nav">
                        <li class="nav-item">
                            @await Component.InvokeAsync("ShoppingCartIcon")
                        </li>
                    </ul>

                    @*Partea de utilizator*@
                     <partial name="_Identity.cshtml" />

                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - MusicHub
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
