@model Producator

@{
    ViewData["Title"] = "Sterge Producatorul";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Confirma stergerea producatorului @Model.NumeProducator</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <div class="form-group text-center">
                    <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
                </div>
                <div class="form-group" style="margin-bottom: 10px">
                    <label asp-for="ProfilePictureURL" class="control-label"></label>
                    <input asp-for="ProfilePictureURL" class="form-control" readonly />
                    <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 10px">
                    <label asp-for="NumeProducator" class="control-label"></label>
                    <input asp-for="NumeProducator" class="form-control" readonly />
                    <span asp-validation-for="NumeProducator" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 20px">
                    <label asp-for="Biografie" class="control-label"></label>
                    <input asp-for="Biografie" class="form-control" readonly />
                    <span asp-validation-for="Biografie" class="text-danger"></span>
                </div>

                <div class="form-group" style="margin-right: 5px">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Arata toti producatorii</a>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })
    </script>
}


